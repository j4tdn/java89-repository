<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
	<context:annotation-config/>	
	
	<import resource="bean-overview.xml"/>
	<import resource="bean-scope.xml"/>
	<!--  Configuration metadata + pojObjects -->
	<bean id="itemService" class="home.be.service.ItemServiceImpl"></bean>
	<bean id="itemA" class="home.be.bean.Item"> 
		<property name="id" value="11"></property>
		<property name="name" value="Item11"></property>
		<property name="providers">
		 	<list>
		 		<value>P1</value>
		 		<value>P2</value>
		 		<value>P3</value>
		 	</list>
		</property>
		
	</bean>
	<bean id="itemB" class="home.be.bean.Item">
		<constructor-arg name="id" value ="99"></constructor-arg>
		<constructor-arg name="name" value ="item 99"></constructor-arg>
	</bean>
</beans>

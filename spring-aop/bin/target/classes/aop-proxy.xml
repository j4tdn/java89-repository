<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="movieService" class="home.service.MovieService">
		<property name="name" value="avatar"></property>
		<property name="catalog" value="adventure"></property>
	</bean>
	<!-- advice -->
	<bean id="movieTrackerBefore" class="home.aop.MovieTrackerBefore">
		
	</bean>
		<!-- AOP - Proxy -->
	<bean id="movieServiceProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
		<!-- join point -->
		<property name="target" ref="movieService"></property>
		
		<!-- advice, point cut -->
		<property name="interceptorNames" >
			<list>
				<value>movieTrackerBefore</value>
			</list>
		</property>
	</bean>
	
</beans>
